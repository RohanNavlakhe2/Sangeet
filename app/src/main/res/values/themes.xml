<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sangeet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/jamuni</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PlayerTheme" parent="Theme.MaterialComponents.NoActionBar">
       <!-- <item name="statusBarScrim">@color/sangeet_color</item>-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/sangeet_color</item>
    </style>
    
    <style name="SeekBarStyle" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#ffffff</item>
        <item name="android:progressTint">#ffffff</item>
       <!-- <item name="android:thumbTint">#c51162</item>-->
    </style>

    <style name="ImageCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
    </style>

    <style name="Image15dpCurved" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
        <!--<item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>-->
    </style>
</resources>